        "jsonwebtoken": "^9.0.2",
        "moment": "^2.29.4",
        "multer": "^2.0.2",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.9.4",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.32.1",
        "sequelize-cli": "^6.6.1",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.0"
