{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend API for Fixify - Nigeria's Premier Service Marketplace",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "setup": "node scripts/quickSetup.js",
        "seed": "node scripts/seedDatabase.js",
        "test-api": "node scripts/testAPI.js",
        "db:migrate": "npx sequelize-cli db:migrate",
